<title>Stor info</title>

<section class="store-info">
    <div class="container">
        <div class="store row mt-4">
            {{#if error}}
            <h3 class="text-center">{{error}}</h3>
            {{/if}}
            {{#each storeData}}
            <div class="inner col-xl-4 col-12">
                <h3>{{this.name}}</h3>
                <p>IP: {{this.serverip}}</p>
                <span>Store ID: {{this.id}}</span>
                <div class="mt-2">
                    <a href=""><i class="bi bi-pencil-square m-2"></i></a>
                    <a href=""><i class="bi bi-eye-fill m-2"></i></a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>