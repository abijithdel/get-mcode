<title>edite store</title>
<section class="edit-store">
    <div class="container">
        <form action="/store/sp/{{store._id}}/edit" method="post" class="mt-5" enctype="multipart/form-data">
            <div class="mt-2">
                <label for="name">Name</label>
                <br>
                <input type="text" name="name" value="{{store.name}}">
            </div>
            <div class="mt-2">
                <label for="discrimination">Discrimination</label>
                <br>
                <input type="text" name="discrimination" value="{{store.discrimination}}">
            </div>
            <div class="mt-2">
                <label for="serverip">Server IP</label>
                <br>
                <input type="text" name="serverip" value="{{store.serverip}}">
            </div>
            <div class="mt-2">
                <label for="port">Port (Optional)</label>
                <br>
                <input type="number" name="port" value="{{store.port}}">
            </div>
            <div class="mt-2">
                <label for="bgimg">Background Image (Optional)</label>
                <br>
                <span>(Size: 1920 x 1080 pixels)</span>
                <br>
                <input type="file" name="bgimg" onchange="viewimg(event)">
                <br>
                <img src="/sp-store-bg-img/{{store.bgimg}}" alt="{{store.name}}" style="height: 60px; width: 100px; border-radius: 10px;" id="img">
                <br>
                <span>{{store.bgimg}}</span>
            </div>
            <div>
                <button type="submit" class="mt-3">Update</button>
            </div>
        </form>
    </div>
</section>

<script>
    function viewimg(event){
        document.getElementById('img').src = URL.createObjectURL(event.target.files[0])
    }
</script>